<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- HEADER -->
    <include android:id="@+id/top_header"
        android:layout_alignParentTop="true" layout="@layout/layout_header" />

    <!-- FOOTER -->
    <LinearLayout android:id="@+id/bottom_menu"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_alignParentBottom="true">
        <!-- menu bar -->
        <include layout="@layout/layout_footer_menu" />
    </LinearLayout>

    <!-- MAIN PART: split layout -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_below="@id/top_header" android:layout_above="@id/bottom_menu"
        android:id="@+id/sub_content_view"
        android:paddingBottom="5sp" android:background="@color/lightGrey"
        android:baselineAligned="false">

        <!-- Left layout -->
        <RelativeLayout android:id="@+id/left_layout"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="#eeeeee"
            android:layout_margin="20dp" android:paddingBottom="20dp"
            android:paddingTop="25dp" android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView android:id="@+id/level_3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20dp"
                android:text="@string/level_3"				
                android:textAppearance="@android:style/TextAppearance.Large" />

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/level_3_label>

                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <!-- Num: Adenopatías Axilares -->			
                        <TextView android:id="@+id/label_RID34272"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/level_3_label"
                            android:text="@string/code_RID34272"
                            android:layout_marginLeft="20dp" />

                        <EditText android:id="@+id/etext_RID34272"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_RID34272"
                            android:hint="@string/code_RID34272"
                            android:text=""
                            android:inputType="number"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp" /> 

                        <!-- Num: Adenopatías Supraclaviculares -->			
                        <TextView android:id="@+id/label_TRMM0012"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/etext_RID34272"
                            android:text="@string/code_TRMM0012"
                            android:layout_marginLeft="20dp" />

                        <EditText android:id="@+id/etext_TRMM0012"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_TRMM0012"
                            android:hint="@string/code_TRMM0012"
                            android:text=""
                            android:inputType="number"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp" /> 
                    </RelativeLayout>                                   
                </ScrollView>
            </RelativeLayout>

            <!-- Right layout -->
            <RelativeLayout android:id="@+id/right_layout"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1" android:background="#eeeeee"
                android:layout_margin="20dp" android:paddingBottom="20dp"
                android:paddingTop="25dp" android:paddingLeft="25dp"
                android:paddingRight="25dp">


                        <!-- Num: Alteraciones Cutaneas -->			
                        <TextView android:id="@+id/label_RID34267"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/etext_TRMM0012"
                            android:text="@string/code_RID34267"
                            android:layout_marginLeft="20dp" />

                        <EditText android:id="@+id/etext_RID34267"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_RID34267"
                            android:hint="@string/code_RID34267"
                            android:text=""
                            android:inputType="number"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp" /> 

                        <!-- Num: Alteraciones Pezón -->			
                        <TextView android:id="@+id/label_RID34314"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/etext_RID34267"
                            android:text="@string/code_RID34314"
                            android:layout_marginLeft="20dp" />

                        <EditText android:id="@+id/etext_RID34314"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_RID34314"
                            android:hint="@string/code_RID34314"
                            android:text=""
                            android:inputType="number"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp" /> 

                        <!-- Num: Secreción -->			
                        <TextView android:id="@+id/label_54302000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/etext_RID34314"
                            android:text="@string/code_54302000"
                            android:layout_marginLeft="20dp" />

                        <EditText android:id="@+id/etext_54302000"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_54302000"
                            android:hint="@string/code_54302000"
                            android:text=""
                            android:inputType="number"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp" /> 

		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>
